}

input {
  border: 1rpx solid #aaa;
  width: 420rpx;
  color: #909090;
  padding: 15rpx;
  /* text-align: center; */
  font-size: 35rpx;
  border-radius: 12rpx;
}

textarea {
  border: 1rpx solid #aaa;
  width: 420rpx;
  padding: 15rpx;
  font-size: 35rpx;
