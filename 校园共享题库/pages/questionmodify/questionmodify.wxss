.top {
  margin-top: 50rpx;
}

.inputview {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 55rpx;
  width: 570rpx;
}

.input_tips {
  color: #585555;
