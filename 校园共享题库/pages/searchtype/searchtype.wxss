}

/*文字超出省略*/

.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block;
  text-align: left;
}

/* 题库信息 */

.bank_message {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 题库信息文字（上传者） */

.title_message_text {
  font-size: 25rpx;
  color: #878787;
}

/* 题库类别 */

.type {
  border: 1rpx solid #55c5ac;
  border-radius: 12rpx;
  padding: 5rpx 8rpx 5rpx 8rpx;
  margin-bottom: 25rpx;
  margin-top: 7rpx;
  color: #55c5ac;
  font-size: 22rpx;
}

/* 题目数量 */

.bankno {
  margin-top: 15rpx;
}

/* 右边部分 */

.do_view {
  width: 100rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

/* 做题图标 */

.do_image {
  width: 80rpx;
  height: 80rpx;
}
