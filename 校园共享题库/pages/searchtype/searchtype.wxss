/* 单条题库显示 */

.bank_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 6rpx solid #F6F8F8; */
  padding: 8rpx 15rpx 15rpx 30rpx;
  margin-bottom: 6rpx;
  background-color: #fff;
}

/* 左边图标 */

.title_image {
  width: 72rpx;
  height: 72rpx;
}

/* 中间部分 */

.title_view {
  width: 450rpx;
  /* height: 140rpx; */
  display: c;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  /* text-overflow: ellipsis;
