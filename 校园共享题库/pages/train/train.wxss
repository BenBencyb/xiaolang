page {
  background-color: #f6f8f8;
}

/* 整体 */

.con {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部 */

.head {
  position: fixed;
  top: 0;
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #55c5ac;
  background-color: #55c5ac;
  color: #fff;
}

/* 当前题目/总题目数 */

.count {
  margin-top: 20rpx;
  font-size: 33rpx;
  margin-bottom: 15rpx;
}

/* 问题和选项整体 */

.question_view {
  width: 650rpx;
  display: flex;
  flex-direction: column;
  margin-top: 180rpx;
}

/* 问题 */

.question_text {
  font-size: 38rpx;
  margin-bottom: 50rpx;
  line-height: 60rpx;
}

/* 单个选项 */

.option_view {
  display: flex;
  flex-direction: row;
  align-content: space-between;
  margin-bottom: 30rpx;
}

/* 字母view */

.letter_view {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #55c5ac;
  margin-right: 25rpx;
  background-color: #fff;
  color: #55c5ac;
}

/* 激活的选项 */

.letter_view.active {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #55c5ac;
  margin-right: 25rpx;
  background-color: #55c5ac;
  color: #fff;
}

/* 点击查看答案后的错误选项 */

.letter_view.error {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #f74343;
  margin-right: 25rpx;
  background-color: #f74343;
  color: #fff;
}

/* 选项字母 */

.letter {
  font-size: 35rpx;
}

/* 选项文字 */

.option_text_view {
  font-size: 38rpx;
  width: 550rpx;
  margin-top: 6rpx;
  line-height: 58rpx;
}

/* 答案解析(查看前) */
.analysis_view{
  width: 00rpx;
  font-size: 0rpx;
  margin-top: 0rpx;
  display: flex;
}

/* 答案解析（查看后） */
.analysis_view.checked2{
  width: 650rpx;
  font-size: 35rpx;
  margin-top: 50rpx; 
  margin-bottom: 150rpx;
  display: flex;
}

/* 查看答案按钮 */

.checkanswer_view {
  width: 300rpx;
  height: 100rpx;
  background-color: #fff;
  color: #55c5ac;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 3rpx solid #55c5ac;
  border-radius: 15rpx;
  margin-top: 60rpx;
  margin-bottom: 150rpx;
}

/* 点击查看答案按钮 */
.checkanswer_view.checked{
  width: 0rpx;
  height: 0rpx;
  line-height: 0rpx;
  font-size: 0rpx;
  border: 0rpx solid #55c5ac;
  border-radius: 0rpx;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
}

/* 上一题和下一题 */

.leftandright {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 260rpx;
  background-color: #fff;
}

/* 上一页或下一页 */

.turn {
  background-color: #55c5ac;
  color: #fff;
  width: 374rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
