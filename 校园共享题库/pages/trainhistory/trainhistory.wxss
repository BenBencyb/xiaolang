page{
  height: 100%;
  background-color: #F6F8F8;
}

.tips_view{
  color: #888888;
  width: 750rpx;
  display: flex;
  justify-content: center;
  margin-top: 300rpx;
  padding: 20rpx;
}

.bank_view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 6rpx solid #F6F8F8; */
  padding: 15rpx 15rpx 15rpx 30rpx;
  margin-bottom: 6rpx;
  background-color: #fff;
}

/* 左边图标 */

.title_image {
  width: 72rpx;
  height: 72rpx;
}

/* 中间部分 */

.title_view {
  width: 680rpx;
  /* height: 168rpx; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  /* text-overflow: ellipsis;
  white-space: nowrap; 
  overflow: hidden; */
}

/* 题库标题文字 */

.title_text {
   width: 650rpx; 
  font-size: 32rpx;
  /* color: #129379; */
  color: #585858;
  margin-top: 5rpx;
  margin-bottom: 20rpx;
  /* text-overflow: ellipsis;
  white-space: nowrap; 
  overflow: hidden; */
  
}

/*文字超出省略*/

.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block; 
  text-align: left
}

/* 题库信息 */

.bank_message {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 题库信息文字（上传者） */

.title_message_text {
  font-size: 25rpx;
  color: #878787;
}

/* 题库类别 */

.type {
  border: 1rpx solid #55c5ac;
  border-radius: 12rpx;
  padding: 5rpx 8rpx 5rpx 8rpx;
  margin-bottom: 25rpx;
  margin-top: 7rpx;
  color: #55c5ac;
  font-size: 22rpx;
}

/* 题目数量 */

.bankno {
  margin-top: 15rpx;
}

/* 右边部分 */

.do_view {
  width: 100rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin-top: 32rpx; */
}

/* 做题图标 */

.do_image {
  width: 80rpx;
  height: 80rpx;
}
