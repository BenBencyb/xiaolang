.weui-search-bar {
  position: fixed;
  top: 0rpx;
  padding: 8px 10px;
  height: 100rpx;
  width: 750rpx;
  /* display: -webkit-box;
  display: -webkit-flex; */
  display: flex;
  box-sizing: border-box;
  background-color: #55c5ac;
  border-top: 1rpx solid #55c5ac;
  border-bottom: 1rpx solid #55c5ac;
  z-index: 999;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 9px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 8px;
  background: #fff;
  border: 0rpx solid #e6e6ea;
}

.weui-search-bar__box {
  /* position: relative; */
  padding-left: 30px;
  padding-right: 30px;
  /* padding-bottom: 8rpx;
  padding-top: 8rpx; */
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 32px;
  line-height: 28px;
  font-size: 16px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 32px;
  color: #fff;
  white-space: nowrap;
}

